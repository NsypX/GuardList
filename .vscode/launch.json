    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Gil Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/BE/server.js",
            "env": {
                "NODE_ENV": "dev",
                "PORT": "3002",
            }
        },
        {
            "command": "cd ./BE && npm run watch",
            "name": "Watch Gil Server",
            "request": "launch",        
            "type": "node-terminal",
            "env": {
                "NODE_ENV": "dev",
                "PORT": "3002",
            }
        },                 
    ]
}